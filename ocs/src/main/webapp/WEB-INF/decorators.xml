<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/decorators">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
		<pattern>/login.jsp</pattern>
		<pattern>/index.jsp</pattern>
		<pattern>/fckeditor/*</pattern>
		<pattern>/index.html</pattern>
	</excludes>

	<!-- 用来定义装饰器要过滤的页面 -->
	<decorator name="main" page="/WEB-INF/sitemesh/basic.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>  
